@{
    List<ModeloResponse> vl_Modelos = ViewBag.listModelos;
}

<div class="content">
    <!-- /form inputs -->
    <style>
        .card-completo {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            position: relative;
        }
    </style>
    <div class="card" style="padding: 0px">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Lista de Modelos</h5>
            <div class="content" id="mi_search"></div>
            <div class="header-elements">
                <!--/Modelos/Parametros/ViewBag.IdProyecto-->
                <a id="add-button" href="@Url.Action("Parametros", "Modelos", new { idProyecto = ViewBag.IdProyecto })" class="btn bg-teal-400 rounded-round btn-icon btn-sm mr-3" title="Añadir nuevo elemento">
                    <span class="letter-icon">➕ </span>
                </a>
                <div class="list-icons">
                    <a class="list-icons-item" data-action="collapse"></a>
                    <a class="list-icons-item" data-action="reload" onclick="fnListarModelos()"></a>
                    <a class="list-icons-item" data-action="remove"></a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div id="grid" class="card-completo">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr style="background-color: #f2f2f2;">
                            <th>NOMBRE</th>
                            <th>VERSIÓN</th>
                            <th>DISCIPLINA</th>
                            <th>FECHA CREACIÓN</th>
                            <th>USUARIO</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody id="dataTabla">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        fnListarModelos();
    });

    function fnListarModelos(){
        const idProyecto = '@ViewBag.IdProyecto';
        fetch(`@Url.Action("GetModelos", "Modelos")?idProyecto=${idProyecto}`)
            .then(response => response.json())
            .then(data => {
                const tabla = document.getElementById('dataTabla');
                tabla.innerHTML = '';
                data.forEach(item => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                            <td>${item.modelo}</td>
                            <td>${item.modeloVersion}</td>
                            <td>${item.disciplina}</td>
                            <td>${item.fechaCreacion}</td>
                            <td>${item.usuarioCreacion}</td>
                            <td>
                                <div>
                                    <a href="/modelos/Avance/${item.idModelo}" class="btn btn-primary btn-sm  m-1">
                                        <i class='icon-arrow-right15'></i><i class='icon-office'></i>  Navegar
                                    </a>
                                    <a href="/modelos/Parametros/Edit/${item.idModelo}" class="btn btn-primary btn-sm">
                                        <i class='icon-arrow-right15'></i><i class='icon-office'></i>  Actualizar 🔼
                                    </a>
                                    <button onclick="deletebtn(${item.idModelo}, '${item.modelo}')" id='btn-del-model' type='button' class='btn btn-danger btn-sm delete-btn'>
                                        <i class='icon-cancel-circle2'></i>  Eliminar
                                    </button>
                                </div>
                            </td>
                        `;
                    tabla.appendChild(row);
                });

                if (data.length == 0) {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                                <td colspan='6' class='text-center'>No hay registros</td>
                            `;
                    tabla.appendChild(row);
                    $('#add-button').show();
                }else{
                    $('#add-button').hide();
                }
            })
            .catch(error => console.error('Error:', error));
    }

    function deletebtn(idModelo, modelo) {
        Swal.fire({
            title: "¿Seguro que quieres el modelo " + modelo + " ?",
            showCancelButton: true,
            confirmButtonText: "Aprobar",
        }).then((result) => {
      
            if (result.isConfirmed || result.value) {
                fetch(`@Url.Action("EliminarModelo", "Modelos")?idModelo=${idModelo}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                    .then(response => {
                     if (response.content > 0) {
                            fnListarModelos();
                            Swal.fire('Eliminado!', 'El modelo ha sido eliminado.', 'success');
                    } else {
                        Swal.fire('Error!', 'Hubo un problema al eliminar el modelo.', 'error');
                    }
                })
                .catch(error => Swal.fire('Error!', 'Hubo un problema al eliminar el modelo.', 'error'));
            }
        });
    }


</script>